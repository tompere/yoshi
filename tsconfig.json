{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,

    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/__tests__/**/*",
    "**/build/**/*",
    "**/templates/**/*",
    "packages/yoshi/config/wallaby-mocha-ts.ts"
  ]
}
